{
    "name": "@apingtech/react-grpc-query",
    "description": "a react hook which helps you to deal with gRPC stream APIs",
    "author": "Aping Technology",
    "version": "0.0.4",
    "keywords": [
        "react",
        "typescript",
        "grpc",
        "rpc",
        "stream",
        "hook"
    ],
    "workspaces": [
        "example"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/apingtech/react-grpc-query.git"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "release": "release-it"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "size-limit": [
        {
            "path": "dist/react-grpc-query.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/react-grpc-query.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@protobuf-ts/runtime-rpc": "^2.0.7",
        "@size-limit/preset-small-lib": "^6.0.3",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.9",
        "husky": "^7.0.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "release-it": "^14.11.6",
        "size-limit": "^6.0.3",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.4.4"
    },
    "release-it": {
        "after:bump": "npm run build"
    }
}
